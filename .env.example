# .env.example
# Sistema de Control de Acceso Digital (SCAD)
# Copiar a .env y completar con valores reales en producción

# ============================================================================
# ENVIRONMENT
# ============================================================================
APP_ENV=development
# Valores permitidos: development, staging, production

APP_DEBUG=true
# En producción: false

# ============================================================================
# DATABASE - Personal DB
# ============================================================================
PERSONAL_DB_HOST=localhost
PERSONAL_DB_PORT=3306
PERSONAL_DB_USER=root
PERSONAL_DB_PASSWORD=
PERSONAL_DB_NAME=personal_db
PERSONAL_DB_CHARSET=utf8mb4

# ============================================================================
# DATABASE - Acceso DB
# ============================================================================
ACCESO_DB_HOST=localhost
ACCESO_DB_PORT=3306
ACCESO_DB_USER=root
ACCESO_DB_PASSWORD=
ACCESO_DB_NAME=acceso_pro_db
ACCESO_DB_CHARSET=utf8mb4

# ============================================================================
# JWT - IMPORTANTE: Cambiar en producción
# ============================================================================
# CAMBIAR ESTA CLAVE SECRETA EN PRODUCCION A UN VALOR ALEATORIO FUERTE
# Ejemplo: openssl rand -base64 32
JWT_SECRET=dev-secret-key-change-in-production-12345
JWT_ACCESS_EXPIRATION=3600
# Expiración en segundos (3600 = 1 hora)

JWT_REFRESH_EXPIRATION=604800
# Expiración en segundos (604800 = 7 días)

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_LOGIN_ATTEMPTS=5
# Máximo número de intentos de login

RATE_LIMIT_LOGIN_WINDOW=300
# Ventana de tiempo en segundos (300 = 5 minutos)

RATE_LIMIT_STORAGE_DIR=cache/
# Directorio para almacenamiento de rate limiter

# ============================================================================
# LOGGING
# ============================================================================
LOG_DIR=logs/
LOG_LEVEL=INFO
# Niveles: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_RETENTION_DAYS=90
# Días para retener logs de auditoría

# ============================================================================
# SECURITY
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,https://yourdomain.com
# Orígenes CORS permitidos (separados por coma)

HSTS_MAX_AGE=31536000
# Segundos para HSTS (31536000 = 1 año)

# ============================================================================
# EMAIL (Futuro: para notificaciones)
# ============================================================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@example.com
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com

# ============================================================================
# SENTRY (Futuro: error tracking)
# ============================================================================
SENTRY_DSN=
# Dejar vacío si no se usa Sentry

# ============================================================================
# CACHE
# ============================================================================
CACHE_DIR=cache/
CACHE_CLEANUP_HOURS=24
# Limpiar archivos caché más antiguos que N horas

# ============================================================================
# URLS
# ============================================================================
APP_URL=http://localhost/acceso
API_BASE_URL=/acceso/api

# ============================================================================
# TIMEZONE
# ============================================================================
TIMEZONE=America/Santiago
# Ver: https://www.php.net/manual/en/timezones.php
